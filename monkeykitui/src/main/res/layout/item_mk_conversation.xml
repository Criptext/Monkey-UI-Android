<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/conv_avatar"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:background="@drawable/mk_default_user_img"
        android:tag="2"/>

    <TextView
        android:id="@+id/conv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="bottom|left"
        android:layout_toRightOf="@id/conv_avatar"
        android:layout_alignTop="@id/conv_avatar"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Gabriel Aumala"
        android:textColor="@android:color/black"
        android:layout_marginBottom="5dp"
        android:textSize="16.0sp"
        android:textStyle="bold|normal" />

    <TextView
        android:id="@+id/conv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_alignBottom="@id/conv_name"
        android:layout_alignParentRight="true"
        android:text="11:55 am"
        android:textAllCaps="true"
        android:textColor="@color/mk_conv_datetime"
        android:textSize="13sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/conv_secondary_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_alignLeft="@id/conv_name"
        android:layout_below="@id/conv_name"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:text="Hola! Que dice man..."
        android:textColor="#bebebe"
        android:textSize="15sp"
        android:drawablePadding="4dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/conv_badge"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignRight="@id/conv_date"
        android:layout_below="@id/conv_date"
        android:layout_marginTop="4dp"
        android:background="@drawable/yellow_badge"
        android:gravity="center"
        android:minWidth="22dp"
        android:text="1"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:textColor="@android:color/white"
        android:textSize="13sp" />

</RelativeLayout>