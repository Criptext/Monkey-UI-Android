<?xml version="1.0" encoding="utf-8"?>

<!-- VIEW FILE IN -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_messages_thread"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:gravity="left"
    android:orientation="vertical">

    <include layout="@layout/include_date_header"/>

    <include layout="@layout/include_member_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:gravity="left"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/content_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:longClickable="true"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/mk_bubble_incoming">
            <include layout="@layout/layout_file_content" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>