<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/info_avatar"
        android:layout_width="@dimen/mk_avatar_size"
        android:layout_height="@dimen/mk_avatar_size"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:background="@drawable/mk_default_user_img"
        android:tag="2"/>

    <TextView
        android:id="@+id/info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="bottom|left"
        android:layout_toRightOf="@id/info_avatar"
        android:layout_alignTop="@id/info_avatar"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Gabriel Aumala"
        android:textColor="@android:color/black"
        android:layout_marginBottom="5dp"
        android:textSize="16.0sp"
        android:textStyle="bold|normal" />

    <TextView
        android:id="@+id/info_rol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_alignBottom="@id/info_name"
        android:layout_alignParentRight="true"
        android:text="11:55 am"
        android:textAllCaps="true"
        android:textColor="@color/mk_conv_datetime"
        android:textSize="16.0sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/info_secondary_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_alignLeft="@id/info_name"
        android:layout_below="@id/info_name"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:text="Hola! Que dice man..."
        android:textColor="#bebebe"
        android:textSize="15sp"
        android:drawablePadding="4dp"
        android:textStyle="normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e2e2e2"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="10dp"/>
</RelativeLayout>