<?xml version="1.0" encoding="utf-8"?>

<!-- VIEW AUDIOS IN-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekbar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_messages_thread"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@android:color/white"
    android:gravity="left"
    android:orientation="vertical" >

    <include layout="@layout/include_member_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:gravity="left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tail"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom"
            android:visibility="invisible"
            android:src="@drawable/mk_piko_izq" />

        <LinearLayout
            android:id="@+id/tap_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/mk_bubble_incoming"
            android:longClickable="true"
            android:minHeight="45dp"
            android:minWidth="90dp"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:visibility="gone" >

            <TextView
                android:id="@+id/text_private"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="left"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="dvdsvfdgdf fiwenfonwof odmvowefowa novoweavoeawnof dowemofmefios noefoewfvoesf vowefoewmfomsd oewfnowefosdmf oemoweafosnmf onweoinweoivnov odvnovnosdnv oidvnsdovisdnvodnv oneovnovnds osdmvosnovnsdv"
                android:textColor="#f8f6f7"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/datetime_private"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:maxLines="1"
                android:text="datetime"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/mk_grey_letters"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/content_message"
            android:layout_width="120dp"
            android:layout_height="133dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/text_shown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="00:00"
                    android:layout_marginBottom="25dp"
                    android:textColor="@color/mk_black_ochenta_cuatro"
                    android:textSize="12sp" />

                <com.innovative.circularaudioview.CircularAudioView
                    android:id="@+id/seek_bar"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    seekbar:start_angle="135"
                    seekbar:end_angle="45"
                    android:layout_centerHorizontal="true"
                    seekbar:circle_progress_color="#cbcbcf"
                    seekbar:circle_color="#f8f6f7"
                    seekbar:inner_tolerance="0.15"/>
                <TextView
                        android:id="@+id/datetime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="datetime"
                        android:layout_alignParentBottom="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/mk_grey_letters"
                        android:layout_marginBottom="3dp"
                        android:textSize="12sp" />
                <ImageView
                    android:id="@+id/play_button"
                    android:src="@drawable/audio_play_in"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignTop="@id/seek_bar"
                    android:layout_marginTop="25dp"
                    android:layout_height="wrap_content"/>

                <ProgressBar
                    android:id="@+id/progress_audio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignTop="@id/seek_bar"
                    android:layout_marginTop="34dp"
                    android:indeterminateTint="#014766"/>

        </RelativeLayout>

        <ImageView
        android:id="@+id/imageViewChecked"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@drawable/mk_contact_checked"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="-27.3dp"
        android:layout_marginRight="5dp"
        android:visibility="visible"/>

   </LinearLayout>

</LinearLayout>