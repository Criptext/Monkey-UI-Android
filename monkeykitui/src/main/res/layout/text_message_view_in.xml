<?xml version="1.0" encoding="utf-8"?>
<!-- VIEW TEXTO IN -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:orientation="vertical"
    android:gravity="left|bottom">

    <include layout="@layout/include_date_header"/>

    <include layout="@layout/include_member_name"/>

    <LinearLayout
        android:id="@+id/content_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tail"
        android:background="@drawable/mk_bubble_incoming"
        android:clickable="false"
        android:minHeight="42dp"
        android:minWidth="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:gravity="fill"
            android:linksClickable="true"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text=""
            android:paddingRight="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/mk_text_in"
            android:textColorLink="@color/mk_text_link_in"
            android:lineSpacingExtra="0.8dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="datetime"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/mk_grey_letters"
            android:layout_marginBottom="4dp"
            android:textSize="12sp" />
    </LinearLayout>

